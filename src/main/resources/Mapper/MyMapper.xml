<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- mapper:根标签，namespace：命名空间，随便写，一般保证命名空间唯一 -->
<mapper namespace="MyMapper">
    <!-- statement，内容：sql语句。id：唯一标识，随便写，在同一个命名空间下保持唯一
       resultType：sql语句查询结果集的封装类型,tb_user即为数据库中的表
     -->
    <select id="selectPassage" resultType="com.example.demo.MybaitsInfo.passage">
    SELECT * from WeiboInformation where id=#{id} ORDER BY Time desc
   </select>
    <select id="selectComment" resultType="com.example.demo.MybaitsInfo.comment">
         SELECT * from WeiboComment where WeiboId=#{id} ORDER BY Time desc
    </select>
    <select id="selectOnePassage" resultType="com.example.demo.MybaitsInfo.passage">
        select * from WeiboInformation where WeiboId=#{id} ORDER BY Time desc
    </select>
    <select id="selectNew" resultType="com.example.demo.MybaitsInfo.passage">
        select * from WeiboInformation  ORDER BY Time desc limit 5;
    </select>

</mapper>
