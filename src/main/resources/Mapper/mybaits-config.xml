            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver" />
                <property name="url" value="jdbc:mysql://cdb-1j5u3xs8.bj.tencentcdb.com:10232/zhdsx?autoReconnect=true" />
                <property name="username" value="root" />
                <property name="password" value="yy123456" />
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="Mapper/MyMapper.xml" />
    </mappers>
</configuration>
